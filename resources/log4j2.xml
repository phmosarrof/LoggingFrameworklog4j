<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Properties>
		<Property name="basePath">./logsFile</Property>
	</Properties>

	<Appenders>
		<RollingFile name="File" fileName="${basePath}/log4j.log"
			filePattern="${basePath}/log4j-%d{yyyy-MM-dd}.log">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS}[%t]%-5level%logger{36}-%msg%n" />
			<SizeBasedTriggeringPolicy size="500" />
		</RollingFile>

		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<!-- <Logger name= "Frameworklog4j.loggingFramework" level="error" additivity="false"> 
			<AppenderRef ref="File"/> </Logger> -->
		<Root level="trace">
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>